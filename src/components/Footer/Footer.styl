.index-footer
  width: 100%
  height: 50px
  display: block
  align-items: center
  text-align: center

  p
    margin-bottom: 20px
    font-size: 1.5rem

  .index-footer-contact
    width: 70%
    height: auto
    display: flex
    justify-content: center
    margin: 0 auto
    gap: 50px
    list-style-type: none

    span
      display: inline
      width: auto
      height: 40px

    img
      width: auto
      height: 40px
      padding: 5px
      border: 1px solid rgba(63, 63, 63, 0.2)
      border-radius: 3px
      margin-bottom: 25px


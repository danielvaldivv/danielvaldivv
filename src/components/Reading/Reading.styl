.Reading-section
  .Reading-books
    display: flex
    justify-content: space-between
    align-items: center
    align-content: center
    padding: 25px

    button
      outline: none;
      height: 25px
      border-radius: 40px
      display: flex
      justify-content: center
      align-items: center
      cursor: pointer
      border: none
      background-color: transparent
      box-shadow: 0px 0px 5px 3px rgba(90, 90, 90, 0.1)

    .button-previous-next
      text-align: center
      height: 25px
      width: 25px

      button:hover
        background-color: rgba(170, 150, 150, 0.5)

    figure
      .Reading-book {
        max-height: 280px
        border-radius: 8px
      }
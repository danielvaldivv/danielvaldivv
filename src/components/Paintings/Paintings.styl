.Paintings-section
  width: 100%
  height: 100%
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center

  .Painting
    width: 100%
    height: 100%
    display: flex
    flex-direction: column
    justify-content: space-around
    align-items: center

    .Painting-description
      text-align: center

    .Painting-pictures
      display: flex
      justify-content: space-between
      align-items: center
      margin: 5px


      button
        outline: none;
        height: 25px
        border-radius: 40px
        display: flex
        justify-content: center
        align-items: center
        cursor: pointer
        border: none
        background-color: transparent
        box-shadow: 0px 0px 5px 3px rgba(90, 90, 90, 0.1)

        .button-previous-next
          text-align: center
          height: 25px
          width: 25px

      button:hover
        background-color: rgba(170, 150, 150, 0.5)

      figure
        display: flex
        justify-content: center

        .Painting-picture
          height: 30%
          max-width: 80%
          width: auto
          border-radius: 8px
          box-shadow: 0px 0px 10px 5px rgba(170, 150, 150, 0.6)

@media (min-width:450px)
  .Paintings-section
    padding: 10px
    .Painting
      .Painting-pictures
        figure
          .Painting-picture
            max-width: 70%

@media (min-width:600px)
  .Paintings-section
    .Painting
      .Painting-pictures
        figure
          .Painting-picture
            max-width: 60%


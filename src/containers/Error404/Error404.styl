.Error404
  height: 100vh
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  text-align: center

  img
    border: 1px solid rgba(100, 100, 100, 0.8)
    border-radius: 50%
    box-shadow: 2px 2px 10px 3px rgba(100, 100, 100, 0.6)
    background-color: var(--color1)

  img:hover
    transform: scale(1.2)
    transition: 200ms
    box-shadow: 5px 5px 20px 3px rgba(100, 100, 100, 0.6)


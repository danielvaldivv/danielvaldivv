.parallax-wraper
  height: 100vh
  overflow-x: hidden
  overflow-y: auto
  perspective: 300px
  max-width: none

  .intro-screen
    width: 100%
    height: 120vh
    background: rgb(201,201,201)
    background: linear-gradient(180deg, rgba(201,201,201,1) 85%, rgba(201,201,201,0.8) 88%, rgba(201,201,201,0.6) 92%, rgba(201,201,201,0.4) 96%, rgba(201,201,201,0.2) 98%, rgba(201,201,201,0) 100%)
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center

  .outroscreen
    width: 100%
    height: auto
    background: rgb(201,201,201)
    background: linear-gradient(0deg, rgba(201,201,201,1) 85%, rgba(201,201,201,0.8) 88%, rgba(201,201,201,0.6) 92%, rgba(201,201,201,0.4) 96%, rgba(201,201,201,0.2) 98%, rgba(201,201,201,0) 100%)
    margin-top: 30px
    padding-top: 30px
    background-repeat: no-repeat
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center

  .parallax-group
    position: relative
    height: 70vh
    transform-style: preserve-3d

    .parallax-layer
      position: absolute;
      inset: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;

    .base-layer
      transform: translateZ(-900px) scale(4);

    .mid-layer
      transform: translateZ(0);
      margin: 8px;
      background-color: transparent;


  #intro
    z-index: 0;

  #group-one
    z-index: -1;

  #group-one > .base-layer
    background-color: transparent;

  #group-two > .mid-layer
    background-color: transparent;


